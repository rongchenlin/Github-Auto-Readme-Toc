{
    "manifest_version": 3,
    "name": "GitHub Readme Sidebar",
    "version": "1.0",
    "description": "Extracts README.md from GitHub projects and generates a sidebar",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "tabs"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "host_permissions": [
      "https://github.com/*"
    ]
  }